<h2>Edite seu Perfil <% resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email, class:"form-control", placeholder: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<br/>
  <div class="field form-group">
    <% f.label :password %> <i>( Deixe em Branco caso não queira mudar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "Password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
      </div>



  <div class="field form-group">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Novo Password" %>
  </div>
<br/>
  <div class="field form-group">
    <% f.label :current_password %> <i>(Precisamos que insira seu password para confirmar suas mudanças, tá ligado?!)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder: "Password Atual" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<br/>
<h3>Cancelar minha conta</h3>

<p>Tá tristinho? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Está certo disso?" }, method: :delete, class:"btn btn-danger" %></p>

<%= link_to "Back", :back %>
