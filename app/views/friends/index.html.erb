
<% if user_signed_in? %>

<table class="table table-striped table-bordered border-sucess table-hover" >
  <thead class="table-success">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>user_id</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
        <% @friends.each do |friend| %>
        <% if friend.user == current_user%>
      <tr>
        <td><%= link_to friend.first_name + " " + friend.last_name_string, friend %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id = current_user.id %></td>
        
        <td><%= link_to 'Editar', edit_friend_path(friend), class:"btn btn-primary" %></td>
        <td><%= link_to 'Apagar', friend, method: :delete, data: { confirm: 'Tá ligado que vai apagar esse camarada, né?!' }, class:"btn btn-outline-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Miguxo', new_friend_path, class:"btn btn-success" %>

<% else %>
<h1>Olá porra de mundo!</h1>
Esta é minha primeira página web, grande coisa, não?!
<% end %>